{
  "private": true,
  "type": "module",
  "pnpm": {
    "overrides": {
      "vue": "3.4.8"
    }
  },
  "scripts": {
    "build": "nuxt build",
    "dev:nuxt": "nuxt dev --port=5999 --no-clear",
    "dev:tsc": "vue-tsc --pretty --noEmit --incremental --watch --preserveWatchOutput",
    "dev:vitest": "vitest",
    "dev": "concurrently --kill-others --names \"nuxt,tsc,vitest\" -c \"bgMagenta.bold,bgBlue.bold\" \"npm run dev:nuxt\" \"npm run dev:tsc\" \"npm run dev:vitest\"",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "td": "npm run build && wrangler pages deploy --project-name sprachy-staging --commit-dirty=true dist/",
    "deploy": "npm run build && wrangler pages deploy --project-name sprachy-live --branch live dist/ && env-cmd node scripts/post-deploy.js",
    "qd": "npm run build && wrangler pages deploy --project-name sprachy-live --branch live dist/",
    "test": "vitest",
    "migrate": "drizzle-kit generate:sqlite && cross-env NODE_OPTIONS='--experimental-specifier-resolution=node' env-cmd --no-override node --loader ts-node/esm scripts/migrate.ts",
    "upgrade": "pnpm update --interactive --latest",
    "migrate:staging": "wrangler d1 migrations --env staging apply d1_sprachy_staging",
    "migrate:live": "wrangler d1 migrations --env live apply d1_sprachy_live"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.515.0",
    "@cloudflare/workers-types": "^4.20240208.0",
    "@nuxt/content": "^2.12.0",
    "@nuxt/test-utils": "^3.10.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/bootstrap": "^5.2.10",
    "@types/can-autoplay": "^3.0.4",
    "@types/lodash": "^4.14.202",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.19",
    "@types/shelljs": "^0.8.15",
    "@types/spark-md5": "^3.0.4",
    "@types/string-pixel-width": "^1.10.3",
    "@types/uuid": "^9.0.8",
    "@types/wait-on": "^5.3.4",
    "@types/wink-tokenizer": "^4.0.6",
    "assert": "^2.1.0",
    "better-sqlite3": "^9.4.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.14",
    "env-cmd": "^10.1.0",
    "glob": "^10.3.10",
    "miniflare": "^2.13.0",
    "num-words-de": "https://github.com/evrys/num-words-de.git",
    "nuxt": "3.9.3",
    "pos": "^0.4.2",
    "sharp": "^0.33.2",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "vitest-environment-nuxt": "^1.0.0",
    "vue-tsc": "^1.8.27",
    "wait-on": "^7.2.0",
    "wrangler": "^3.28.4"
  },
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/vue-fontawesome": "^3.0.6",
    "@mdit-vue/plugin-component": "^2.0.0",
    "@peculiar/webcrypto": "^1.4.5",
    "@popperjs/core": "^2.11.8",
    "accessible-nprogress": "^2.1.2",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.3",
    "can-autoplay": "^3.0.2",
    "drizzle-orm": "^0.29.4",
    "gsap": "^3.12.5",
    "h3": "^1.10.2",
    "js-cookie": "^3.0.5",
    "lodash-es": "^4.17.21",
    "markdown-it": "^14.0.0",
    "object-to-formdata": "^4.5.1",
    "spark-md5": "^3.0.2",
    "string-pixel-width": "^1.11.0",
    "uuid": "^9.0.1",
    "vue-define-state": "^0.0.3",
    "wink-tokenizer": "^5.3.0",
    "zod": "^3.22.4"
  }
}