{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "types": [
      "@cloudflare/workers-types"
    ]
  },
  "exclude": [
    "scripts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "require": [
      "tsconfig-paths/register"
    ],
    // https://github.com/TypeStrong/ts-node/issues/1971
    "ignoreDiagnostics": [
      5104
    ]
  }
}